<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="softwork.mapper.ContestMapper">
    <select id="getBaseInfoByCondition" parameterType="softwork.pojo.entities.Contest" resultType="softwork.pojo.entities.Contest">
        select id,name,originator,url,level,type,enroll_start,enroll_end,contest_start,contest_end,pic_url from contest where 1 = 1
        <if test="level != null">
            AND level = #{level}
        </if>
        <if test="type != null">
            AND type = #{type}
        </if>
    </select>
</mapper>